# Portal Transparencia Backend Configuration
# Copy this file to .env and fill in your values

# Required: Anthropic API Key for Claude models
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required: Tavily API Key for internet search
TAVILY_API_KEY=your_tavily_api_key_here

# Required: Portal da TransparÃªncia API Key
# Register at: https://portaldatransparencia.gov.br/api-de-dados/cadastrar-email
TRANSPARENCIA_API_KEY=your_transparencia_api_key_here

# Server Configuration (optional)
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration (optional)
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# Agent Configuration (optional)
AGENT_MODEL=claude-haiku-4-5
DEFAULT_THREAD_ID=default

# Logging Configuration (optional)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
